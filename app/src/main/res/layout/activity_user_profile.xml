<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_bg"
    android:orientation="vertical"
    tools:context="com.app.skybarge.activities.UserProfile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/topbigbg">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:popupTheme="@style/AppTheme.PopupOverlay">

                <ImageView
                    android:id="@+id/headerLeftImage"
                    android:layout_width="@dimen/dp25"
                    android:layout_height="@dimen/dp25"
                    android:layout_gravity="left"
                    android:layout_marginRight="@dimen/dp10"
                    android:padding="@dimen/dp5"
                    android:src="@drawable/left_arrow"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/textHeaderTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:text="@string/profile"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_header_size" />

            </android.support.v7.widget.Toolbar>
        </RelativeLayout>

        <ImageView
            android:id="@+id/image_user"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="85dp"
            android:background="@drawable/profile_icon" />

        <ImageView
            android:id="@+id/image_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_alignBottom="@+id/image_user"
            android:layout_alignRight="@+id/image_user"
            android:src="@drawable/edit_yellow" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp5"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.app.skybarge.utils.CustomTextView
                    android:id="@+id/mTvJoiningLetter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp5"
                    android:layout_weight="1"
                    android:background="@drawable/white_corners"
                    android:padding="@dimen/dp10"
                    android:gravity="center"
                    android:text="@string/joining_letter"
                    android:textColor="@color/textcolordark"
                    android:textSize="@dimen/text_size_14" />

                <com.app.skybarge.utils.CustomTextView
                    android:id="@+id/mTvIdCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_weight="1"
                    android:background="@drawable/white_corners"
                    android:drawableRight="@drawable/circle_down_arrow"
                    android:padding="@dimen/dp10"
                    android:text="@string/id_card"
                    android:textColor="@color/textcolordark"
                    android:textSize="@dimen/text_size_14" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp15"
                android:background="@drawable/white_corners"
                android:orientation="vertical"
                android:padding="@dimen/dp10">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp5"
                    android:weightSum="2">

                    <com.app.skybarge.utils.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dp5"
                        android:text="@string/name"
                        android:textColor="@color/textcolorlight"
                        android:textSize="@dimen/text_size_13" />

                    <com.app.skybarge.utils.CustomTextView
                        android:id="@+id/mTvName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:padding="@dimen/dp5"
                        android:text="Mr mark Lee"
                        android:textColor="@color/textcolordark"
                        android:textSize="@dimen/text_size_13" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp5"

                    android:weightSum="2">

                    <com.app.skybarge.utils.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/dp5"
                        android:text="@string/access_card_no"
                        android:textColor="@color/textcolorlight"
                        android:textSize="@dimen/text_size_13" />

                    <com.app.skybarge.utils.CustomTextView
                        android:id="@+id/mTvAccessno"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:padding="@dimen/dp5"
                        android:text="SVBO46"
                        android:textColor="@color/textcolordark"
                        android:textSize="@dimen/text_size_13" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp5"
                    android:visibility="gone"
                    android:weightSum="2">

                    <com.app.skybarge.utils.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/dp5"
                        android:text="@string/employee_no"
                        android:textColor="@color/textcolorlight"
                        android:textSize="@dimen/text_size_13" />

                    <com.app.skybarge.utils.CustomTextView
                        android:id="@+id/mTvEmplyeeno"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:padding="@dimen/dp5"
                        android:text="SVBO46"
                        android:textColor="@color/textcolordark"
                        android:textSize="@dimen/text_size_13" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp5"
                    android:weightSum="2">

                    <com.app.skybarge.utils.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dp5"
                        android:text="@string/designation"
                        android:textColor="@color/textcolorlight"
                        android:textSize="@dimen/text_size_13" />

                    <com.app.skybarge.utils.CustomTextView
                        android:id="@+id/mTvDesignation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:padding="@dimen/dp5"
                        android:text="Adminstartor"
                        android:textColor="@color/textcolordark"
                        android:textSize="@dimen/text_size_13" />


                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp5"
                    android:weightSum="2">

                    <com.app.skybarge.utils.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dp5"
                        android:text="@string/father_s_name"
                        android:textColor="@color/textcolorlight"
                        android:textSize="@dimen/text_size_13" />

                    <com.app.skybarge.utils.CustomTextView
                        android:id="@+id/mTvFatherName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:padding="@dimen/dp5"
                        android:text="Mr mark Lee"
                        android:textColor="@color/textcolordark"
                        android:textSize="@dimen/text_size_13" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp5"
                    android:weightSum="2">

                    <com.app.skybarge.utils.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dp5"
                        android:text="@string/mobile_number"
                        android:textColor="@color/textcolorlight"
                        android:textSize="@dimen/text_size_13" />

                    <com.app.skybarge.utils.CustomTextView
                        android:id="@+id/mTvMobileNumber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:padding="@dimen/dp5"
                        android:text="9464473546"
                        android:textColor="@color/textcolordark"
                        android:textSize="@dimen/text_size_13" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp5"
                    android:weightSum="2">

                    <com.app.skybarge.utils.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dp5"
                        android:text="@string/email_id"
                        android:textColor="@color/textcolorlight"
                        android:textSize="@dimen/text_size_13" />

                    <com.app.skybarge.utils.CustomTextView
                        android:id="@+id/mTvEmailId"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:padding="@dimen/dp5"
                        android:text="9464473546"
                        android:textColor="@color/textcolordark"
                        android:textSize="@dimen/text_size_13" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp5"
                    android:weightSum="2">

                    <com.app.skybarge.utils.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dp5"
                        android:text="Date of Birth"
                        android:textColor="@color/textcolorlight"
                        android:textSize="@dimen/text_size_13" />

                    <com.app.skybarge.utils.CustomTextView
                        android:id="@+id/mTvDOB"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:padding="@dimen/dp5"
                        android:text="Nov 07,1993"
                        android:textColor="@color/textcolordark"
                        android:textSize="@dimen/text_size_13" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp5"
                    android:weightSum="2">

                    <com.app.skybarge.utils.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dp5"
                        android:text="@string/date_of_anniversary"
                        android:textColor="@color/textcolorlight"
                        android:textSize="@dimen/text_size_13" />

                    <com.app.skybarge.utils.CustomTextView
                        android:id="@+id/mTvDateAniversary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:padding="@dimen/dp5"
                        android:text="June 16, 1997"
                        android:textColor="@color/textcolordark"
                        android:textSize="@dimen/text_size_13" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp5"
                    android:weightSum="2">

                    <com.app.skybarge.utils.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dp5"
                        android:text="@string/date_of_joining"
                        android:textColor="@color/textcolorlight"
                        android:textSize="@dimen/text_size_13" />

                    <com.app.skybarge.utils.CustomTextView
                        android:id="@+id/mTvDateJoining"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:padding="@dimen/dp5"
                        android:text="June 16, 1997"
                        android:textColor="@color/textcolordark"
                        android:textSize="@dimen/text_size_13" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp5"
                    android:weightSum="2">

                    <com.app.skybarge.utils.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dp5"
                        android:text="@string/no_of_dependent"
                        android:textColor="@color/textcolorlight"
                        android:textSize="@dimen/text_size_13" />

                    <com.app.skybarge.utils.CustomTextView
                        android:id="@+id/mTvNoDependant"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:padding="@dimen/dp5"
                        android:text="Adult 2"
                        android:textColor="@color/textcolordark"
                        android:textSize="@dimen/text_size_13" />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp5"
                    android:weightSum="2">

                    <com.app.skybarge.utils.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dp5"
                        android:text="@string/driving_license"
                        android:textColor="@color/textcolorlight"
                        android:textSize="@dimen/text_size_13" />

                    <com.app.skybarge.utils.CustomTextView
                        android:id="@+id/mTvDrivingLicense"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:padding="@dimen/dp5"
                        android:text="LAR-946447-RAS"
                        android:textColor="@color/textcolordark"
                        android:textSize="@dimen/text_size_13" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
